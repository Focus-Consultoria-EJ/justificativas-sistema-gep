{
  "name": "gep_backend",
  "version": "1.0.0",
  "engines": {
    "node": "18.x"
  },
  "description": "Backend do site de GEP da Focus Consultoria",
  "main": "index.js",
  "scripts": {
    "start": "pm2-runtime start ecosystem.config.js --env production",
    "develop": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "server:start": "pm2 start dist/index.js",
    "server:monit": "pm2 monit dist/index.js",
    "server:stop": "pm2 stop dist/index.js",
    "knex:latest:production": "knex --knexfile dist/config/knexfile.js migrate:latest --env production",
    "knex:rollback:production": "knex --knexfile dist/config/knexfile.js migrate:rollback --env production",
    "knex:seed-test:production": "knex --knexfile dist/config/knexfile.js seed:run --env production",
    "knex:make": "knex --knexfile src/config/knexfile.ts migrate:make",
    "knex:seed": "knex --knexfile src/config/knexfile.ts seed:run",
    "knex:latest": "knex --knexfile src/config/knexfile.ts migrate:latest",
    "knex:rollback-all": "knex --knexfile src/config/knexfile.ts migrate:rollback --all"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.4.2",
    "nodemailer": "^6.9.3",
    "pg": "^8.10.0",
    "pm2": "^5.2.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/nodemailer": "^6.4.8",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "ts-node-dev": "^2.0.0"
  }
}
